<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_player_lutemon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/player_lutemon" />

        <ImageView
            android:id="@+id/iv_enemy_lutemon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/enemy_lutemon" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <Button
            android:id="@+id/btn_attack1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/attack_1" />

        <Button
            android:id="@+id/btn_attack2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/attack_2" />

        <Button
            android:id="@+id/btn_attack3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/attack_3" />

        <Button
            android:id="@+id/btn_attack4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/attack_4" />

        <Button
            android:id="@+id/btn_give_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/give_up" />

    </LinearLayout>

</LinearLayout>
